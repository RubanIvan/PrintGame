            <TextBox x:Name="TextBoxImage5" HorizontalAlignment="Left" Height="23" Margin="359,366,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

            <Image x:Name="Image6" HorizontalAlignment="Left" Height="160" Width="160" Margin="527,206,0,0" VerticalAlignment="Top" Source="Resources/test.jpg"/>
            <TextBox x:Name="TextBoxImage6" HorizontalAlignment="Left" Height="23" Margin="527,366,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

