@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated == false)
{
    using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    //using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request.Url.LocalPath.ToString() }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <p>E-mail:</p>
        <input type="text" name="Email" />
        <p>Пароль:</p>
        <input type="password" name="Password" />
        <br/>
        <input type="checkbox" name="RememberMe">
        <span>&nbsp; Запомнить меня</span>
        <br/>
        <input type="submit"/>
        <br/>
        <div>
            @Html.ActionLink("Регистрация на сайте!", "Register", "Account")
            <br />
            @Html.ActionLink("Забыли пароль?", "ForgotPassword", "Account")
        </div>

    }
}
else
{

    <p>Добро пожаловать</p>
        
        <p>@User.Identity.Name</p>
        
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Выход" />
    }

}
